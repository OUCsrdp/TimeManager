<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Person_Infor activity-->
    <style name="personInforItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>
    <style name="personInforPoint">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">35dp</item>
    </style>
    <style name="personInforLabel">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="personInforEdit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="personInforList">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <!--Timesharing_edit activity-->
    <style name="timesharingEditTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/fontColor</item>
    </style>
    <style name="timesharingEditLabel">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/fontColor</item>
    </style>
    <style name="timesharingTime">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#666666</item>
    </style>
    <style name="timesharingEditSatisfy">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginRight">9dp</item>
    </style>
   <!-- setting_dialog-->
    <style name="SetTimeLabel">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="timeAlertDialog">
        <item name="android:windowBackground">@drawable/popradius</item>
    </style>
</resources>
