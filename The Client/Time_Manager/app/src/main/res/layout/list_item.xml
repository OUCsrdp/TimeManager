<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_border"
    android:orientation="horizontal">

    <!--用户信息-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4.5"
        android:orientation="horizontal">


        <!--头像-->
        <ImageView
            android:id="@+id/excellent_list_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:layout_gravity="center"
            android:src="@drawable/login_icon1"
            android:paddingHorizontal="10dp"/>

        <!--信息-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.5"
            android:orientation="vertical"
            android:paddingVertical="10dp">

            <TextView
            android:id="@+id/excellent_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="爱吃肉的兔子"
            android:textSize="18dp"
            android:textColor="#fd8d01"/>

            <TextView
                android:id="@+id/excellent_list_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="中国海洋大学"
                android:textSize="16dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/excellent_list_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="计算机系"
                android:textSize="16dp"
                android:textColor="#ffffff"/>

        </LinearLayout>


    </LinearLayout>

    <!--简介与赞-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5.5"
        android:orientation="vertical">

        <!--简介与赞-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/list_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="简介："
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/list_intro_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="新出炉的时间分配表，请君共赏，现在二十个字了"
                    android:textSize="16dp"
                    android:textColor="#ffffff"/>

            </LinearLayout>

            <!--点赞-->
            <Button
                android:id="@+id/list_like_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/like_button"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="129"
                android:gravity="center"
                android:textSize="14dp"
                android:layout_margin="5dp"/>

            <!--时间-->
            <TextView
                android:id="@+id/list_intro_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-9-6"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/list_intro"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>