<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/popradius"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ScheduleSame">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="检测到同名日程"
            android:textSize="20sp"
            android:textColor="@color/fontColor"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/Sname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="检测到同名日程"
            android:textSize="20sp"
            android:textColor="@color/majorOrange"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/Stime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="检测到同名日程"
            android:textSize="20sp"
            android:textColor="@color/majorOrange"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            />
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/ScheduleSameCancel"
                android:layout_alignParentStart="true"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:text="取消"
                android:background="@drawable/share_ensure"
                android:textColor="@color/chartWhite"/>
            <Button
                android:id="@+id/ScheduleSameEnsure"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginEnd="30dp"
                android:text="确定"
                android:background="@drawable/share_ensure"
                android:textColor="@color/chartWhite"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>