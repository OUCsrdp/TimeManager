<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/popradius"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/SharePop">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/ShareCancel"
                    android:layout_gravity="right"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="确定要分享这张时间分配表吗？"
                    android:textSize="20sp"
                    android:textColor="@color/majorOrange"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    />
                <Button
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:id="@+id/ShareEnsure"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="确定"
                    android:background="@drawable/share_ensure"
                    android:textColor="@color/chartWhite"/>
        </LinearLayout>
</LinearLayout>
